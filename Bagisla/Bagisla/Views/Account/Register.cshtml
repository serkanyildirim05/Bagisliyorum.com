                                                @Html.TextBoxFor(m => m.HD.Ilce, new { data_msg_required = "Gerekli", @class = "form-control", placeholder = "İlçe", required = "required" })
                                            
                                            </div>
                                            <div class="col-md-12" style="padding-bottom:10px">
                                                <button type="submit" class="form-control btn btn-success"><span class="glyphicon glyphicon-log-in"></span> Kayıt Ol</button>
                                            </div>
                                        </div>
                                    </div>

                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/js/RegisterPage.js"></script>
