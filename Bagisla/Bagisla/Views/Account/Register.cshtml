@model Bagisla.Models.RegisterModel
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Content/js/RegisterPage.js"></script>
<link href="~/Content/css/RegisterPage.css" rel="stylesheet" />
<!------ Include the above in your HEAD tag ---------->
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="#" class="active" id="login-form-link">Hasta</a>
                            </div>
                            <div class="col-xs-6">
                                <a href="#" id="register-form-link">Bağisci</a>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                           
                                <form id="login-form" action="http://phpoll.com/login/process" method="post" role="form" style="display: block;">
                                    <div class="form-group">
                                        <label for="ad" class="cols-sm-2 control-label">Ad</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.Ad, new { @class = "form-control", name = "ad", id = "ad", placeholder = "Adinizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="ad" class="cols-sm-2 control-label">Soyad</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.Soyad, new { @class = "form-control", name = "soyad", id = "soyad", placeholder = "Soyadinizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class="cols-sm-2 control-label">Mailiniz</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", name = "email", id = "email", placeholder = "Emailinizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="KullaniciAdi" class="cols-sm-2 control-label">Username</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", name = "username", id = "username", placeholder = "Kullanıcı Adınızı Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="sifre" class="cols-sm-2 control-label">Şifre</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", name = "sifre", id = "sifre", placeholder = "Sifrenizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="sifre" class="cols-sm-2 control-label">Şifrenizi Tekrar Girin</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", name = "sifre", id = "sifre", placeholder = "Sifrenizi tekrar Girin" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">

                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                                            </div>
                                        </div>
                                    </div>

                                </form>
                                <form id="register-form" action="http://phpoll.com/register/process" method="post" role="form" style="display: none;">
                                    <div class="form-group">
                                        <label for="ad" class="cols-sm-2 control-label">Ad</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.Ad, new { @class = "form-control", name = "ad", id = "ad", placeholder = "Adinizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="ad" class="cols-sm-2 control-label">Soyad</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.Soyad, new { @class = "form-control", name = "soyad", id = "soyad", placeholder = "Soyadinizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class="cols-sm-2 control-label">Mailiniz</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", name = "email", id = "email", placeholder = "Emailinizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="KullaniciAdi" class="cols-sm-2 control-label">Username</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", name = "username", id = "username", placeholder = "Kullanıcı Adınızı Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="sifre" class="cols-sm-2 control-label">Şifre</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", name = "sifre", id = "sifre", placeholder = "Sifrenizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="sifre" class="cols-sm-2 control-label">Şifrenizi Tekrar Girin</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", name = "sifre", id = "sifre", placeholder = "Sifrenizi tekrar Girin" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="yas" class="cols-sm-2 control-label">Yaşınızı Girin</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                @Html.PasswordFor(model => model.Yas, new { @class = "form-control", name = "yas", id = "yas", placeholder = "Yaşinizi Girin" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}