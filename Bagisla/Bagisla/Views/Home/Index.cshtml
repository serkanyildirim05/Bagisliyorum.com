@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="slider-container rev_slider_wrapper">
    <div id="revolutionSlider" class="slider rev_slider" data-plugin-revolution-slider data-plugin-options="{'delay': 9000, 'gridwidth': 1170, 'gridheight': 500}">
        <ul>
            <li data-transition="fade">
                <img src="~/Content/img/custom-header-bg.jpg"
                     alt=""
                     data-bgposition="center center"
                     data-bgfit="cover"
                     data-bgrepeat="no-repeat"
                     class="rev-slidebg">

                <div class="tp-caption"
                     data-x="212"
                     data-y="188"
                     data-start="1000"
                     data-transform_in="x:[-300%];opacity:0;s:500;"><img src="~/Content/img/slides/slide-title-border.png" alt=""></div>

                <div class="tp-caption top-label"
                     data-x="262"
                     data-y="180"
                     data-start="500"
                     data-transform_in="y:[-300%];opacity:0;s:500;">DO YOU NEED A NEW</div>

                <div class="tp-caption"
                     data-x="512"
                     data-y="188"
                     data-start="1000"
                     data-transform_in="x:[300%];opacity:0;s:500;"><img src="~/Content/img/slides/slide-title-border.png" alt=""></div>

                <div class="tp-caption main-label"
                     data-x="170"
                     data-y="210"
                     data-start="1500"
                     data-whitespace="nowrap"
                     data-transform_in="y:[100%];s:500;"
                     data-transform_out="opacity:0;s:500;"
                     data-mask_in="x:0px;y:0px;"></div>

                <div class="tp-caption bottom-label"
                     data-x="220"
                     data-y="280"
                     data-start="2000"
                     data-transform_in="y:[100%];opacity:0;s:500;">Check out our options and features.</div>

                <div class="tp-caption"
                     data-x="right" data-hoffset="0"
                     data-y="bottom" data-voffset="0"
                     data-start="1800"
                     data-transform_in="x:50;y:150;z:0;rotationX:0;rotationY:0;rotationZ:0;scaleX:0.5;scaleY:0.5;skewX:0;skewY:0;opacity:0;transformPerspective:0;transformOrigin:50% 50%;s:500;"><img src="img/slides/slide-mobile-device.png" alt=""></div>
            </li>
            <li data-transition="fade">
                <img src="~/Content/img/custom-header-bg.jpg"
                     alt=""
                     data-bgposition="center center"
                     data-bgfit="cover"
                     data-bgrepeat="no-repeat"
                     class="rev-slidebg">

                <div class="tp-caption"
                     data-x="center"
                     data-y="center"
                     data-start="500"
                     data-transform_in="opacity:0;s:500;">
                    <iframe frameborder="0" src='http://player.vimeo.com/video/67957799?title=0&byline=0&portrait=0;api=1' width='640' height='360' style='width:640px;height:360px;'></iframe>
                </div>

            </li>
        </ul>
    </div>
</div>
