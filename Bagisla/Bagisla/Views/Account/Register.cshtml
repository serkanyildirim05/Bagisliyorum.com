                                            </div>

                                            <div class="col-md-12" style="padding-bottom:10px">
                                                @Html.TextBoxFor(m => m.HD.Yas, new { data_msg_required = "Gerekli", @class = "form-control", placeholder = "Yaş Giriniz", required = "required" })
                                              


                                            </div>
                                            <div class="col-md-12" style="padding-bottom:10px">
                                                @Html.TextBoxFor(m => m.HD.Cinsiyet, new { data_msg_required = "Gerekli", @class = "form-control", placeholder = "Cinsiyet", required = "required" })
                                         
                                            </div>

                                            <div class="col-md-12" style="padding-bottom:10px">
                                                @Html.TextBoxFor(m => m.HD.DogumTarihi, new { data_msg_required = "Gerekli", @class = "form-control", placeholder = "Doğum Tarihi Giriniz", required = "required" })
                                             
                                            </div>

                                            <div class="col-md-12" style="padding-bottom:10px">
                                                @Html.TextBoxFor(m => m.HD.KanGrubu, new { data_msg_required = "Gerekli", @class = "form-control", placeholder = "Kan Grubu", required = "required" })
                                        
                                            </div>

                                            <div class="col-md-12" style="padding-bottom:10px">
                                                @Html.TextBoxFor(m => m.HD.SaglikDurumu, new { data_msg_required = "Gerekli", @class = "form-control", placeholder = "Sağlık Durumu Giriniz", required = "required" })
                                           
                                            </div>

                                            <div class="col-md-12" style="padding-bottom:10px">
                                                @Html.TextBoxFor(m => m.HD.Meslek, new { data_msg_required = "Gerekli", @class = "form-control", placeholder = "Meslek Giriniz", required = "required" })
                                               
                                            </div>

                                            <div class="col-md-12" style="padding-bottom:10px">
