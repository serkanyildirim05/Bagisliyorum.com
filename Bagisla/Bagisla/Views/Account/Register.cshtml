@model Bagisla.Models.RegisterModel
@{
    Layout = null;
}
<!------ Include the above in your HEAD tag ---------->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap.css">
    <!-- Website CSS style -->
    <link rel="stylesheet" type="text/css" href="assets/css/main.css">
    <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link href="~/Content/css/RegisterPage.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title>Admin</title>
</head>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
  
    <body>
        <div class="container">
            <div class="row main">
                <div class="panel-heading">
                    <div class="panel-title text-center">
                        <h1 class="title">Company Name</h1>
                        <hr />
                    </div>
                </div>
                <div class="main-login main-center">
                    <form class="form-horizontal" method="post" action="#">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-5">
                                <div class="input-group pull-left">
                                    <label class="btn btn-default">
                                        @Html.RadioButtonFor(x => x.Bagisci,true)
                                        <span>Bağışçı</span>
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-5">
                                <div class="input-group pull-right">
                                    <label class="btn btn-default">
                                        @Html.RadioButtonFor(model => model.Hasta, true)
                                        <strong>Hasta</strong>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ad" class="cols-sm-2 control-label">Ad</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                    @Html.TextBoxFor(model=>model.Ad, new {@class="form-control", name="ad", id="ad", placeholder="Adinizi Girin"  })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ad" class="cols-sm-2 control-label">Soyad</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                    @Html.TextBoxFor(model => model.Soyad, new { @class = "form-control", name = "soyad", id = "soyad", placeholder = "Soyadinizi Girin" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="cols-sm-2 control-label">Mailiniz</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", name = "email", id = "email", placeholder = "Emailinizi Girin" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="KullaniciAdi" class="cols-sm-2 control-label">Username</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                    @Html.TextBoxFor(model => model.UserName , new { @class = "form-control", name = "username", id = "username", placeholder = "Kullanıcı Adınızı Girin" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="sifre" class="cols-sm-2 control-label">Şifre</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", name = "sifre", id = "sifre", placeholder = "Sifrenizi Girin" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="sifre" class="cols-sm-2 control-label">Şifrenizi Tekrar Girin</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", name = "sifre", id = "sifre", placeholder = "Sifrenizi tekrar Girin" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group ">
                            <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Kayit Ol</button>
                        </div>
                        <div class="login-register">
                            <a href="index.php">Giriş</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="assets/js/bootstrap.js"></script>
    </body>
}

</html>